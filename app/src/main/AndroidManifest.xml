<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.luo.loginandlogout">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/LoginTheme">
        <activity android:name=".ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.WelcomeActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.UsersActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".ui.CalculateActivity" />
        <activity android:name=".ui.ThreadActivity" />
        <activity android:name=".ui.FilmsActivity" />
        <activity android:name=".ui.FilmDetailActivity" />
        <activity android:name=".ui.FilesActivity" />
        <activity android:name=".ui.ContactActivity"></activity>
    </application>

</manifest>