<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FilmDetailActivity">

    <ImageView
        android:id="@+id/film_detail_image_view"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="300sp"
        android:maxHeight="300sp" />

    <TextView
        android:id="@+id/film_detail_title_text_view"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/film_detail_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/film_detail_date_text_view"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/film_detail_title_text_view"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/film_detail_des_text_view"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/film_detail_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/film_detail_back_button"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/film_detail_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>