<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:orientation="vertical"
    android:id="@+id/film_relative_layout">

    <ImageView
        android:id="@+id/film_image_view"
        android:src="@drawable/film1"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:maxWidth="110dp"
        android:maxHeight="150dp"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/film_poster" />

    <RelativeLayout
        android:layout_toEndOf="@id/film_image_view"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="150dp">

        <TextView
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:id="@+id/film_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="13sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/film_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>
